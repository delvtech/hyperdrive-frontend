{
  "name": "hyperdrive-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:docs": "yarn build:packages && turbo run build:docs --filter={./apps/hyperdrive-sdk-docs}",
    "dev": "turbo run dev --parallel --filter=./apps/*",
    "lint": "turbo run lint",
    "lint:packages": "turbo run lint --filter=./packages/*",
    "test": "turbo run test --filter=./packages/*",
    "test:run": "turbo run test:run --filter=./packages/*",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "postinstall": "husky install",
    "typecheck": "turbo run typecheck",
    "new-hyperwasm-just-dropped": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm -rf packages/{hyperdrive-sdk,hyperdrive-viem}/dist && yarn cache clean && yarn && yarn workspace @hyperdrive/sdk run build && yarn workspace @hyperdrive/sdk-viem run build"
  },
  "devDependencies": {
    "@hyperdrive/prettier-config": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "^5.0.2"
  },
  "resolutions": {
    "typescript": "^5.0.2",
    "viem": "^1.19.15"
  },
  "lint-staged": {
    "{apps,packages}/**/*.{gql,graphql,js,jsx,ts,tsx,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.18"
}

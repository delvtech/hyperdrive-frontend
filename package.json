{
	"name": "hyperdrive-frontend",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"license": "AGPL-3.0",
	"workspaces": ["apps/*", "packages/*", "crates/*"],
	"scripts": {
		"build": "turbo run build",
		"build:crates": "turbo run build --filter=./crates/*",
		"build:packages": "turbo run build --filter=./packages/*",
		"build:docs": "yarn build:packages && turbo run build --filter={./apps/hyperdrive-sdk-docs}",
		"dev": "turbo run dev --parallel --filter=./apps/*",
		"test": "turbo run test --filter=./packages/*",
		"test:run": "turbo run test:run --filter=./packages/*",
		"postinstall": "npx husky",
		"lint-and-format": "biome check --config-path biome.jsonc --diagnostic-level error .",
		"lint-and-format:fix": "yarn lint-and-format --fix",
		"lint-and-format:fix:unsafe": "yarn lint-and-format:fix --unsafe",
		"typecheck": "turbo run typecheck",
		"reset-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && yarn cache clean && yarn",
		"release": "yarn build:packages && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@changesets/cli": "^2.27.1",
		"husky": "^9.0.11",
		"lint-staged": "^13.0.3",
		"prettier": "^3.3.3",
		"turbo": "^2.0.6",
		"typescript": "^5.5.4"
	},
	"resolutions": {
		"typescript": "^5.5.4",
		"viem": "2.9.2"
	},
	"lint-staged": {
		"{apps,packages}/**/*.{js,jsx,ts,tsx,json,jsonc}": "yarn lint-and-format:fix --staged"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"dependencies": {
		"@changesets/cli": "^2.27.1"
	},
	"packageManager": "yarn@1.22.19",
	"msw": {
		"workerDirectory": ["apps/hyperdrive-trading/src/public"]
	}
}

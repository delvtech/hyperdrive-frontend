{
  "extends": "@hyperdrive/tsconfig/base.json",
  "include": ["src", "out"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "src/*": ["src/*"],
      "out/*": ["out/*"]
    },
    "resolveJsonModule": true
  }
}

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@hyperdrive/tsconfig/base.json",
  "include": ["src"],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "src/*": ["src/*"]
    },
    "resolveJsonModule": true
  }
}

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@hyperdrive/tsconfig/base.json",
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "sourceMap": false,
    "declarationMap": false,
    "resolveJsonModule": true
  }
}

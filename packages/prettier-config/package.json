{
  "name": "@hyperdrive/prettier-config",
  "version": "1.0.0",
  "main": ".prettierrc.js",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "prettier": "3.2.5"
  },
  "scripts": {
    "lint:w": "eslint --fix '**/*.{gql,graphql,js,jsx,ts,tsx,json,md}'",
    "lint": "eslint '**/*.{gql,graphql,js,jsx,ts,tsx,json,md}'",
    "format": "prettier --write '**/*.{gql,graphql,js,jsx,ts,tsx,json,md}'",
    "format:check": "prettier --check '**/*.{gql,graphql,js,jsx,ts,tsx,json,md}'"
  }
}

{
  "extends": "@hyperdrive/tsconfig/base.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "target": "esnext",
    "module": "ESNext",
    "paths": {
      "src/*": ["src/*"]
    },
    "resolveJsonModule": true
  }
}
